<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/locked_unlocked_alarm"
        android:layout_width="249dp"
        android:layout_height="268dp"
        android:adjustViewBounds="false"
        android:background="#F0F0F0"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarm_title"
        android:layout_width="224dp"
        android:layout_height="83dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toTopOf="@+id/locked_unlocked_alarm"
        app:layout_constraintEnd_toEndOf="@+id/locked_unlocked_alarm"
        app:layout_constraintStart_toStartOf="@+id/locked_unlocked_alarm"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/unlock_lock_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/locked_unlocked_alarm"
        app:layout_constraintStart_toStartOf="@+id/locked_unlocked_alarm"
        app:layout_constraintTop_toBottomOf="@+id/locked_unlocked_alarm"
        app:layout_constraintVertical_bias="0.228" />

    <Button
        android:id="@+id/change_pass_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/unlock_lock_button"
        app:layout_constraintStart_toStartOf="@+id/unlock_lock_button"
        app:layout_constraintTop_toBottomOf="@+id/unlock_lock_button" />


</androidx.constraintlayout.widget.ConstraintLayout>